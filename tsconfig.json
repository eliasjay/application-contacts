{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                        
    "esModuleInterop": true,                  
    "resolveJsonModule": true,        
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["shared/*"],
      "@modules/*": ["modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}